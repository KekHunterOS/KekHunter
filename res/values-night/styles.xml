<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Overall buttons styles-->
    <style name="kekbutton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
<!--        <item name="backgroundTint">#E423232B</item> -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="actionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>

        <item name="android:maxHeight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Alert dialog button styles go here-->
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>

    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>

    </style>
    <!-- Button styles go here-->

    <!-- Licence dialog styles go here-->
    <style name="DialogStyle" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:textColorLink">#476CCD</item>

        <!-- Animations -->
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundColor">#1C1C1C</item>
        <item name="buttonStyle">@style/kekbutton</item>


        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogStyle2" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorLink">#476CCD</item>
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundColor">#1C1C1C</item>
        <item name="buttonStyle">@style/kekbutton</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DesignTextInput" parent="Theme.KekHunter">
        <item name="height">72dp</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>