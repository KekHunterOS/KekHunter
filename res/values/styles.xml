<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:alpha">0.25</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:drawingCacheQuality">auto</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/clearTitle</item>

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
</resources>